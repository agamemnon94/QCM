{% block main %}

<h1 class="pb-5 text-center">Liste des catégories</h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr class="text-center">
      <td class="col">N°</td>
      <td class="col">Id</td>
      <td class="col">Nom</td>
      <td class="col">Actions</td>
    </tr>
  </thead>
  <tbody>
    {% for category in categories|reverse %}

    <tr class="text-center" data-id="{{category.id}}">
      <td>{{ loop.revindex }}</td>
      <td>{{ category.id }}</td>
      <td>{{ category.name }}</td>

      {# <td>
        <a class="col mx-2" href="{{ path('category_update',{'id':category.id}) }}" title="Éditer"><i
