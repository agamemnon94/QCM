{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Liste des élèves{% endblock %}
{% block button %}
<div class="text-end">
  <a href="{{ path('eleve_create') }}" class="btn btn-success py-3" id="add_category">Ajouter un élève</a>
</div>
{% endblock button %}

{% block main %}

<h1 class="pb-5 text-center">Liste des élèves</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr class="text-center">
      <td class="col">N°</td>
      <td class="col">Id</td>
      <td class="col">Prénom</td>
      <td class="col">Nom</td>
      <td class="col">Classe</td>
      <td class="col">Email</td>
      <td class="col">Actions</td>
    </tr>
  </thead>
  <tbody>
    {% for eleve in eleves|reverse %}

    <tr class="text-center">
      <td>{{ loop.revindex }}</td>
      <td>{{ eleve.id }}</td>
      <td>{{ eleve.firstName }}</td>
      <td>{{ eleve.lastName }}</td>
      <td>
        {% for classe in eleve.eleveClasse %}
        {{ classe.name }}
        {% endfor %}
      </td>
      <td>{{ eleve.email }}</td>

      <td>
        <a class="col mx-2" href="{{ path('eleve_update',{'id':eleve.id}) }}" title="Éditer"><i
            class="bi bi-pencil-square"></i></a>
        <a class="col mx-2" href="{{ path('eleve_delete',{'id':eleve.id}) }}" title="Supprimer"><i
            class="bi bi-trash3"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>

</table>
{% endblock %}