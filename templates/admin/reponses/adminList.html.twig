{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Liste des réponses{% endblock %}
{% block button %}
<div class="text-end">
    <a href="{{ path('reponse_create') }}" class="btn btn-success py-3" id="add_category">Ajouter une réponse</a>
</div>
{% endblock button %}

{% block main %}
<h1 class="pb-5 text-center">Liste des réponses</h1>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th class="col">N°</th>
            <th class="col">Id</th>
            <th class="col">Libelle</th>
            <th class="col">Success</th>
            <th class="col">Questions</th>
            <th class="col">actions</th>
        </tr>
    </thead>
    <tbody>
        {% for reponse in reponses|reverse %}
        <tr>
            <td>{{ loop.revindex }}</td>
            <td>{{ reponse.id }}</td>
            <td class="px-5">{{ reponse.libelle }}</td>
            <td>{{ reponse.success ? 'Yes' : 'No' }}</td>
            <td>{{ reponse.questions.id }}</td>
            <td>
                <a class="col mx-2" href="{{ path('reponse_update',{'id':reponse.id}) }}" title="Éditer"><i
                        class="bi bi-pencil-square"></i></a>
                <a class="col mx-2" href="{{ path('reponse_delete',{'id':reponse.id}) }}" title="Supprimer"><i
                        class="bi bi-trash3"></i></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td class="text-center" colspan="12">Aucun enregistrement trouvé</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}